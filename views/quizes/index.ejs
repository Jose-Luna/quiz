<table>
    <% var i; for (i=0 ; i< quizes.length; i++){ %>
        <tr>
            <td>
                <a href="quizes/<%= quizes[i].id %>">
                    <%= quizes[i].pregunta %>
                </a>
            </td>
            <td>
                <a href="quizes/<%= quizes[i].id %>/edit">
                    <button>Editar
                    </button>

                </a>
            </td>
            <td>
                <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
                    <button type="submit" onClick="return confirm('¿Está seguro de borrar? <%= quizes[i].pregunta %>');">Eliminar</button>
                </form>
                
            </td>
        </tr>

        <% } %>
</table>

<br />
<a href="quizes/new">
    <button type="button">Crear pregunta</button>
</a>

<div>
    <form method="get" action="/quizes">
        Búsqueda:
        <input type="text" name="search" placeholder="criterio" />
        <input type="submit" value="Enviar" />
    </form>

</div>